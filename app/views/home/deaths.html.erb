<style> 
table, td {
  border: 1px solid;
}

td:hover {background-color: yellow;}

.tabela {
    margin-left:340px;
}
h1 {
    margin-left:640px;
}

</style>


<h1> Mortos </h1>

<div class="tabela">

<table>
    <thead>
        <td>País</td>
        <td>Cidade</td>
        <td>Confirmados</td>
        <td>Útima Atualização</td>
    </thead>
    
    <tbody>
    <%@deaths.each do |death|%>
        <tr>
            <td> <%= death['countryRegion'] %> </td>
            <td> <%= death['provinceState'] %> </td>
            <td> <%= death['confirmed'] %> </td>
            <td> <%= Time.at(death['lastUpdate'].to_i/1000).strftime('%d/%M/%Y %H:%M:%S')%></td>  <!--Método que organiza as datas e horários-->
        </tr>

    <% end %>
    
    
    </tbody>
</table>
</div>